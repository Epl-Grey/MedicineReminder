<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.RegisterActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/autorization"

            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Регистрация"
            android:textSize="40dp"
            android:fontFamily="@font/montserratsemibold"
            android:textAppearance="@style/welcom"
            android:paddingLeft="24dp"

            />


        <EditText
            android:layout_below="@id/autorization"
            android:id="@+id/email_edit_text"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="18dp"
            android:layout_marginTop="160dp"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/rounded_rectangle"
            android:hint="Ваша почта"
            android:fontFamily="@font/montserratmedium"
            android:textColorHint="@color/green_white"

            />

        <EditText
            android:layout_below="@id/email_edit_text"
            android:id="@+id/name_edit_text"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="18dp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/rounded_rectangle"
            android:hint="Ваше имя"
            android:fontFamily="@font/montserratmedium"
            android:textColorHint="@color/green_white"

            />

        <EditText
            android:layout_below="@id/name_edit_text"
            android:id="@+id/password_edit_text"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:hint="Ваш пароль"
            android:fontFamily="@font/montserratmedium"
            android:textColorHint="@color/green_white"
            android:layout_marginTop="12dp"

            android:inputType="textPassword"
            android:layout_height="46dp"
            android:background="@drawable/rounded_rectangle"/>


        <EditText
            android:id="@+id/repeat_password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="12dp"
            android:layout_below="@id/password_edit_text"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="18dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_rectangle"
            android:fontFamily="@font/montserratmedium"
            android:hint="Повторите пароль"
            android:inputType="textPassword"
            android:textColorHint="@color/green_white" />

        <Button
            android:layout_below="@id/repeat_password_edit_text"
            android:id="@+id/submit_register"
            android:layout_width="209dp"
            android:layout_height="45dp"
            android:text="Войти"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:fontFamily="@font/montserratmedium"
            android:textSize="20sp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:background="@drawable/rounded_buttom"
            android:layout_marginTop="10dp"/>


    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>