<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddingPill">

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1EDE6"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:layout_width="311dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="113dp"
            android:fontFamily="@font/inter"
            android:gravity="top"
            android:lineSpacingExtra="-32sp"
            android:text="@string/some_id"
            android:textAppearance="@style/some_id2" />

        <TextView
            android:layout_width="311dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="153dp"
            android:fontFamily="@font/inter"
            android:gravity="top"
            android:lineSpacingExtra="-32sp"
            android:text="препарат"
            android:textAppearance="@style/some_id2" />

        <TextView
            android:layout_width="361.96dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="278dp"
            android:fontFamily="@font/inter"
            android:gravity="top"
            android:text="Название препарата"
            android:textAppearance="@style/some_id3" />

        <EditText
            android:id="@+id/NameEdit"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="320dp"
            android:layout_marginRight="30dp" />

        <TextView
            android:layout_width="204.15dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="367dp"
            android:fontFamily="@font/inter"
            android:gravity="top"
            android:text="@string/some_id"
            android:textAppearance="@style/some_id3" />

        <EditText
            android:id="@+id/NumberEdit"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/NameEdit"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="51dp"
            android:layout_marginRight="200dp" />

        <Spinner
            android:id="@+id/Spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/NameEdit"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:layout_width="358.01dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="29dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="441dp"
            android:text="Кол-во раз в сутки"
            android:textAppearance="@style/some_id3"
            android:fontFamily="@font/inter"
            android:gravity="top"
            />

        <Spinner
            android:id="@+id/spinnerTimes"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/NumberEdit"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:layout_width="359dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="29dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="520dp"
            android:text="Начало курса"
            android:textAppearance="@style/some_id3"
            android:fontFamily="@font/inter"
            android:gravity="top"
            />

        <TextView
            android:id="@+id/textBefore"
            android:layout_width="wrap_content"
            android:layout_height="26.5dp"
            android:layout_marginLeft="29dp"
            android:text="01.01.2023"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#454444"
            android:layout_marginTop="550dp"
            android:textSize="25sp" />

        <TextView
            android:layout_width="359dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="29dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="599dp"
            android:text="Конец курса"
            android:textAppearance="@style/some_id3"
            android:fontFamily="@font/inter"
            android:gravity="top"
            />

        <TextView
            android:id="@+id/textAfter"
            android:layout_width="wrap_content"
            android:layout_height="26.9dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="625dp"
            android:text="01.01.2023"
            android:textAlignment="center"
            android:textColor="#454444"
            android:textSize="25sp" />



                <ImageButton
                    android:id="@+id/back"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="23dp"
                    android:background="@drawable/back" />






        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnChoose"
            android:layout_width="291dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="75dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="677dp"
            android:background="@drawable/botao"
            android:text="Выбрать"
            android:fontFamily="@font/inter"
            android:textAppearance="@style/kl" />


        <ImageView
            android:layout_width="71dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="335dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="130dp"
            android:background="@drawable/object1"
            />
        <ImageView
            android:layout_width="186dp"
            android:layout_height="107dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="242dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:clipToOutline="true"
            android:background="@drawable/object2"
            />
        <ImageView

            android:layout_width="84dp"
            android:layout_height="71dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="172dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:clipToOutline="true"
            android:background="@drawable/object3"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>