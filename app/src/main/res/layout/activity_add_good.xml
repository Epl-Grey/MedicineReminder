<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddGoodActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/a" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/flowers"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="55dp"
            app:srcCompat="@drawable/anim" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_marginLeft="32dp"
            android:fontFamily="@font/montserratsemibold"
            android:textAppearance="@style/some_id4"

            android:textSize="25dp"
            android:layout_below="@id/bk"
            android:textColor="@color/black"
            android:text="Препарат успешно "
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_marginLeft="32dp"
            android:fontFamily="@font/montserratsemibold"
            android:textAppearance="@style/some_id4"
            android:textSize="25dp"
            android:layout_below="@id/textView2"
            android:textColor="@color/black"
            android:text="добавлен! "
            android:layout_height="wrap_content"
            />

        <ImageButton
            android:id="@+id/bk"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="17dp"
            android:background="@drawable/arrowleft"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />





    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>