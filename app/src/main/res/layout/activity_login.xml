<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
       >


        <TextView
            android:id="@+id/autorization"

            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Авторизация"
            android:textSize="40dp"
            android:fontFamily="@font/montserratsemibold"
            android:textAppearance="@style/welcom"
            android:paddingLeft="24dp"

            />


        <EditText
            android:layout_below="@id/autorization"
            android:id="@+id/login_edit_text"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="160dp"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/rounded_rectangle"
            android:hint="Ваша почта"
            android:fontFamily="@font/montserratmedium"
            android:textColorHint="@color/green_white"

      />

        <EditText
            android:layout_below="@id/login_edit_text"
            android:id="@+id/password_edit_text"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:hint="Ваш пароль"
            android:fontFamily="@font/montserratmedium"
            android:textColorHint="@color/green_white"
            android:layout_marginTop="12dp"

            android:inputType="textPassword"
            android:layout_height="46dp"
            android:background="@drawable/rounded_rectangle"/>




        <Button
            android:layout_below="@id/password_edit_text"
            android:id="@+id/submit_login"
            android:layout_width="209dp"
            android:layout_height="45dp"
            android:text="Войти"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:fontFamily="@font/montserratmedium"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_buttom"
            android:layout_marginTop="68dp"/>

        <TextView
            android:layout_below="@id/submit_login"
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Регистрация"
            android:textSize="20dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/montserratmedium"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>