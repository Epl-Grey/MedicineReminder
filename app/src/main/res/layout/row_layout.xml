<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:layout_marginBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:layout_width="wrap_content"
    android:background="@drawable/vct"
android:id="@+id/la"
    android:layout_height="wrap_content"
    > <TextView
    android:id="@+id/name"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="15dp"
    android:gravity="top"
    android:text="@string/name"
    android:textAppearance="@style/some_id" />

    <TextView
        android:id="@+id/kl"
        android:layout_width="14dp"
        android:layout_height="24dp"
        android:layout_below="@id/name"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:gravity="top"
        android:text="3"
        android:textAppearance="@style/kl" />

    <TextView
        android:id="@+id/id"
        android:layout_width="142dp"
        android:layout_height="24dp"
        android:layout_below="@id/name"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="32dp"
        android:layout_toRightOf="@id/kl"
        android:gravity="top"
        android:text="раз(а) в сутки"
        android:textAppearance="@style/kl" />

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/name"
        android:text="@string/time"
        android:textAlignment="center"
        android:textAppearance="@style/time_" />

    <TextView
        android:id="@+id/id_storage"
        android:layout_width="0dp"
        android:layout_height="0dp"/></RelativeLayout>

   <RelativeLayout
       android:layout_below="@id/la"
       android:layout_width="match_parent"
       android:layout_height="10dp"
    />
</RelativeLayout>