        <activity
            android:name=".activities.ResultActivity"
            android:exported="false" />

        <receiver android:name=".alarm.AlarmReceiverNotify" />

        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
